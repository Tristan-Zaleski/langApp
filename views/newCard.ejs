<%- include("partials/header") -%>

<h1><strong>Create a New Card</strong></h1>
<form class="" action="/newCard" method="post">
  <div class="form-group">
    <label>Foreign Word</label>
    <input class="form-control" type="text" name="foreignWord">
    <label>English Word</label>
    <input class="form-control" type="text" name="englishWord">
    <label>Example Phrases</label>
    <textarea class="form-control" name="examplePhrases" rows="5" cols="30"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include("partials/footer") -%>
